<project name="MyProject" default="dist" basedir=".">
  <description>
    node.js on Rhino!
  </description>

  <property name="src" location="src"/>
  <property name="build" location="classes"/>
  <property name="dist"  location="dist"/>
  <property name="lib"  location="lib"/>

  <path id="build-classpath" description="The default classpath.">
    <fileset dir="${lib}">
      <include name="*.jar"/>
    </fileset>
  </path>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}" destdir="${build}" includeantruntime="false">
      <classpath refid="build-classpath"/>
    </javac>
  </target>

  <target name="jar" depends="compile">
    <jar jarfile="${dist}/rhinode.jar"
         basedir="${build}">
      <manifest>
        <attribute name="Main-Class"
                   value="com.mowforth.rhinode.Rhinode" />
      </manifest>
    </jar>
  </target>

  <target name="uberjar" depends="jar">
    <mkdir dir="${dist}"/>
    <jar jarfile="${dist}/rhinode-standalone.jar"
         compress="true">
      <zipgroupfileset dir="${lib}" includes="*.jar"/>
      <zipgroupfileset dir="${dist}" includes="rhinode.jar"/>
      <manifest>
        <attribute name="Main-Class"
                   value="com.mowforth.rhinode.Rhinode" />
      </manifest>
    </jar>
  </target>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>
