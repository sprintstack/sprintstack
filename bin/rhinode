#!/usr/bin/env bash

CXD=`dirname "$0"`
MODPATHS=/usr/local/lib/node_modules/npm/node_modules

if [ -a /usr/bin/rlwrap ]; then
    RLWRAP=rlwrap
else
    echo 'You might want to install "rlwrap" for a more pleasant REPL experience.'
fi

exec $RLWRAP java -Dconfig.file=$CXD/../etc/application.conf -Drhinode.modpaths=$MODPATHS -jar $CXD/../dist/rhinode-standalone.jar "$@"

