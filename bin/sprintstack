#!/usr/bin/env bash

CXD=`dirname "$0"`
BASE=$CXD/../
CORE_PATH=$BASE/dist/sprintstack.jar:$BASE/lib/*

PID=$$
PSGID=`ps -p $PID -o gid --no-headers`
PSSUID=`ps -p $PID -o uid --no-headers`

GID=${PSGID//[[:space:]]}
SUID=${PSSUID//[[:space:]]}

if [ -a /usr/bin/rlwrap ]; then
    RLWRAP=rlwrap
else
    echo 'You might want to install "rlwrap" for a more pleasant REPL experience.'
fi

exec $RLWRAP java -classpath $CORE_PATH -XX:+UseParallelGC -Dconfig.file=$CXD/../etc/application.conf -Dsprintstack.uid=$SUID -Dsprintstack.gid=$GID -Dsprintstack.pid=$$ com.sprintstack.SprintStack "$@"

